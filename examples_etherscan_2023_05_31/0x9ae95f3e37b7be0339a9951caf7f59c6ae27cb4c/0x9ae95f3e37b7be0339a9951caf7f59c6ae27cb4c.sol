    }

    /// @dev Sorts fee plans according to the upper limit from min to max.
    function sortPlans() internal {
        uint256 l = feePlans.length;
        for (uint i = 0; i < l; i++) {
            for (uint j = i + 1; j < l; j++) {
                if (feePlans[i].upperLimit > feePlans[j].upperLimit) {
                    FeePlan memory temp = feePlans[i];
                    feePlans[i] = feePlans[j];
                    feePlans[j] = temp;
                }
            }
        }
    }
