    /**
     * @dev Transfers tokens from a sender to a recipient without charging a fee.
     * @notice Can only be called by an address with the minter role.
     * @param _sender The address of the sender.
     * @param _recipient The address of the recipient.
     * @param _amount The amount of tokens to be transferred.
     */
    function transferFromWithoutFee(address _sender, address _recipient, uint256 _amount) external whenNotPaused onlyRole(MINTER_ROLE) returns (bool) {
        require(_amount > 0, "amount must be greater than 0");
        require(_sender != address(0), "transfer from the zero address");

        uint256 currentAllowance = _allowances[_sender][_msgSender()];
        require(currentAllowance >= _amount, "transfer over allowed limit");

        unchecked {
            _approve(_sender, _msgSender(), currentAllowance - _amount);
        }

        _transferWithoutFee(_sender, _recipient, _amount);

        return true;
    }

    /**
     * @dev Transfers tokens without a fee to a recipient.
     * @notice Can only be called by an address with the minter role.
     * @param _recipient The address of the recipient.
     * @param _amount The amount of tokens to be transferred.
     */
    function transferWithoutFee(address _recipient, uint256 _amount) external whenNotPaused onlyRole(MINTER_ROLE) returns (bool) {
        require(_amount > 0, "amount must be greater than 0");
        if (_recipient == address(0)) {
            revert IncorrectAddress();
        }

        _transferWithoutFee(msg.sender, _recipient, _amount);
        return true;
    }


    /**
     * @notice Transfers a specified `amount` of tokens from `sender` to `recipient`, applying automatic token fees.
     * @dev This internal function is similar to {transfer} and allocates all fees to the token address. Emits two {Transfer} events, one for the regular transfer and another for the fee transfer.
     * @param _sender The address of the sender, which must not be the zero address.
     * @param _recipient The address of the recipient, which must not be the zero address.
     * @param _amount The amount of tokens to transfer, where the sender must have a balance of at least this amount.
     */
    function _transfer(
        address _sender,
        address _recipient,
        uint256 _amount
    ) internal virtual whenNotPaused override {
        require(_sender != address(0), "transfer from the zero address");
        require(_recipient != address(0), "transfer to the zero address");

        uint256 codeSizeRecipient;
        uint256 codeSizeSender;
        assembly {codeSizeSender := extcodesize(_sender)}
        assembly {codeSizeRecipient := extcodesize(_recipient)}

        require(codeSizeRecipient == 0 || allowedContracts[_recipient], "contract not allowed");
        require(codeSizeSender == 0 || allowedContracts[_sender], "contract not allowed");

        uint256 senderBalance = _balances[_sender];
        require(senderBalance >= _amount, "transfer amount exceeds balance");

        // select feeAmount
        uint256 fee;
        for (uint i = 0; i < feePlans.length; i++) {
            if (_amount <= feePlans[i].upperLimit) {
                fee = (_amount * feePlans[i].feePercentage) / 100000;
                break;
            }
        }

        uint256 amountAfterFee;
        unchecked {
            amountAfterFee = _amount - fee;
            _balances[_sender] = senderBalance - _amount;
        }

        _balances[_recipient] += amountAfterFee;
        _balances[address(this)] += fee;
        emit Transfer(_sender, address(this), fee);
        emit Transfer(_sender, _recipient, amountAfterFee);
    }

    /**
     * @notice Transfers a specified `amount` of tokens from `sender` to `recipient` without applying any fees.
     * @dev This private function emits one {Transfer} event.
     * @param _sender The address of the sender, which must not be the zero address.
     * @param _recipient The address of the recipient, which must not be the zero address.
     * @param _amount The amount of tokens to transfer, where the sender must have a balance of at least this amount.
     */
    function _transferWithoutFee(
        address _sender,
        address _recipient,
        uint256 _amount
    ) private returns (bool) {
        require(_recipient != address(0), "transfer to the zero address");
        uint256 senderBalance = _balances[_sender];
        require(
            senderBalance >= _amount,
            "transfer amount exceeds balance"
        );

        unchecked {
            _balances[_sender] = senderBalance - _amount;
        }
        _balances[_recipient] += _amount;
        emit Transfer(_sender, _recipient, _amount);
        return true;
    }

    /**
     * @dev Withdraws accumulated fees to the major token holders.
     * @notice Can only be called by an account with the DISTRIBUTOR_ROLE.
     * @param _recipient The address to receive the withdrawn fees.
     * @param _amount The amount of fees to be withdrawn.
     */
    function rewardWithdrawal(address _recipient, uint256 _amount) external whenNotPaused onlyRole(DISTRIBUTOR_ROLE) {
        require(_recipient != address(this), "self transfer is not allowed");
        require(_amount > 0, "amount cannot be the zero");
        _transferWithoutFee(address(this), _recipient, _amount);
        emit Reward(_recipient, _amount);
    }

    /**
     * @dev Withdraws accumulated fees to multiple major token holders.
     * @notice Can only be called by an account with the DISTRIBUTOR_ROLE.
     * @param _recipients An array of addresses to receive the withdrawn fees.
     * @param _amounts An array of amounts of fees to be withdrawn for each recipient.
     */
    function batchRewardWithdrawal(address[] memory _recipients, uint256[] memory _amounts) external whenNotPaused onlyRole(DISTRIBUTOR_ROLE) {
        require(_recipients.length == _amounts.length, "arrays length not match");

        uint totalWithdrawalAmount = 0;

        for (uint i = 0; i < _recipients.length; i++) {
            require(_recipients[i] != address(this), "self transfer is not allowed");
            require(_amounts[i] > 0, "amount cant be 0");
            require(_recipients[i] != address(0), "transfer to the zero address");
            totalWithdrawalAmount += _amounts[i];
        }

        uint256 senderBalance = _balances[address(this)];

        require(totalWithdrawalAmount <= senderBalance, "no enough funds for withdrawal");

        for (uint i = 0; i < _recipients.length; i++) {
            _balances[_recipients[i]] += _amounts[i];
            emit Transfer(address(this), _recipients[i], _amounts[i]);
            emit Reward(_recipients[i], _amounts[i]);
        }

        unchecked {
            _balances[address(this)] = senderBalance - totalWithdrawalAmount;
        }
    }

