        require(size > 0, "invalid contract address");
        allowedContracts[_contractAddress] = isAllowed;
    }

    /**
     * @notice Updates the fee percentage for the specified fee plan.
     * @dev Only accounts with OPERATOR_ROLE can call this function.
     * @param _planId The ID of the fee plan to be updated.
     * @param _feePercentage The new fee percentage for the fee plan.
     */
    function updateFeePercentage(uint _planId, uint32 _feePercentage) external whenNotPaused onlyRole(OPERATOR_ROLE) {
        if (_feePercentage > 100000) {
            revert IncorrectFeePercentage();
        }
        feePlans[_planId].feePercentage = _feePercentage;
        emit PlanUpdated(_planId, feePlans[_planId].upperLimit, _feePercentage);
    }

    /**
     * @dev Updates the upperLimit of a fee plan and sorts the fee plans.
     * @notice Can only be called by the operator of this contract.
     * @param _planId The ID of the fee plan to be updated.
     * @param _upperLimit The new upper limit of the fee plan.
     */
    function updateUpperLimit(uint _planId, uint _upperLimit) external whenNotPaused onlyRole(OPERATOR_ROLE) {
        feePlans[_planId].upperLimit = _upperLimit;
        sortPlans();
        emit PlanUpdated(_planId, _upperLimit, feePlans[_planId].feePercentage);
    }

    /**
     * @dev Adds a new fee plan and sorts the fee plans.
     * @notice Can only be called by the operator of this contract.
     * @param _upperLimit The upper limit of the new fee plan.
     * @param _feePercentage The fee percentage of the new fee plan.
     */
    function addFeePlan(uint _upperLimit, uint32 _feePercentage) external whenNotPaused onlyRole(OPERATOR_ROLE) {
        if (_feePercentage > 100000) {
            revert IncorrectFeePercentage();
        }
        feePlans.push(FeePlan(_upperLimit, _feePercentage));
        sortPlans();
        emit NewFeePlan(_upperLimit, _feePercentage);
    }


    /**
     * @dev Removes a fee plan.
     * @notice Can only be called by the operator of this contract.
     * @param _planId The ID of the fee plan to be removed.
     */
    function removeFeePlan(uint _planId) external whenNotPaused onlyRole(OPERATOR_ROLE) {
        require(_planId < feePlans.length, "Invalid Plan ID selected");

        for (uint i = _planId; i < feePlans.length - 1; i++) {
            feePlans[i] = feePlans[i + 1];
        }

        // Remove the last element
        feePlans.pop();

        emit FeePlanRemoved(_planId);
    }

